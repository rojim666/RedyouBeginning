{
  "manifest_version": 3,
  "name": "红柚起始页",
  "version": "1.0.0",
  "description": "美观的浏览器新标签页 - 支持书签收藏夹、天气、每日一言、快速链接",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.nxvav.cn/*",
    "https://wttr.in/*",
    "https://www.google.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "红柚起始页",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["music/*", "icon.png", "logo.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
