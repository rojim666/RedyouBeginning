}

.weather-card-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.weather-card-title h3{
  margin: 0;
  font-size: 18px;
  font-weight: 600;
  color: var(--control-text);
  letter-spacing: -0.02em;
}

.weather-main{
  display: flex;
  align-items: center;
  gap: 20px;
}

.weather-main-icon{
  font-size: 64px;
  line-height: 1;
  filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.1));
}

.weather-main-info{
  flex: 1;
}

.weather-main-temp{
  font-size: 48px;
  font-weight: 700;
  color: var(--control-text);
  letter-spacing: -0.03em;
  line-height: 1;
  margin-bottom: 8px;
  background: linear-gradient(135deg, var(--accent) 0%, #0051d5 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.weather-main-desc{
  font-size: 16px;
  font-weight: 500;
  color: var(--muted);
  letter-spacing: -0.01em;
}

.weather-card-body{
  padding: 24px;
}

.weather-detail-grid{
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
  margin-bottom: 20px;
}

.weather-detail-item{
  padding: 16px;
  border-radius: 16px;
  background: var(--control-bg);
  border: 1px solid var(--control-border);
