  transition: all 0.3s cubic-bezier(0.28, 0.11, 0.32, 1);
}

.weather-detail-item:hover .weather-detail-icon{
  transform: scale(1.1);
  filter: drop-shadow(0 2px 8px rgba(0, 122, 255, 0.3));
}

.weather-detail-icon svg{
  width: 100%;
  height: 100%;
}

.weather-detail-label{
  font-size: 13px;
  font-weight: 500;
  color: var(--muted);
  margin-bottom: 6px;
  letter-spacing: -0.01em;
}

.weather-detail-value{
  font-size: 18px;
  font-weight: 600;
  color: var(--control-text);
  letter-spacing: -0.02em;
}

.weather-update-time{
  text-align: center;
  padding-top: 16px;
