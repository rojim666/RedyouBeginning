  align-items: center;
  gap: 24px;
}

.focus-timer-wrapper{
  position: relative;
  width: 280px;
  height: 280px;
}

/* SVG圆形进度条 */
.focus-progress-ring{
  width: 100%;
  height: 100%;
  transform: rotate(-90deg);
}

.progress-ring-bg{
  fill: none;
  stroke: rgba(0, 0, 0, 0.08);
  stroke-width: 8;
}

.progress-ring-circle{
  fill: none;
  stroke: #007AFF;
  stroke-width: 8;
  stroke-linecap: round;
  stroke-dasharray: 534.07; /* 2 * PI * 85 */
  stroke-dashoffset: 534.07;
  transition: stroke-dashoffset 1s linear;
}

/* 时钟刻度装饰 */
.clock-ticks{
  color: rgba(0, 0, 0, 0.3);
  animation: clockTickPulse 3s ease-in-out infinite;
}

/* 深色主题下的进度条 */
